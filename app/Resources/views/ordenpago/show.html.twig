{% extends 'base.html.twig' %}

{% block header %}
    Orden de Pago
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}
<script>
    $(function(){
        var hash = window.location.hash;
        hash && $('ul.nav a[href="' + hash + '"]').tab('show');

        $('.nav-tabs a').click(function (e) {
          $(this).tab('show');
          var scrollmem = $('body').scrollTop() || $('html').scrollTop();
          window.location.hash = this.hash;
          $('html,body').scrollTop(scrollmem);
        });
      });
</script>
<ul class="nav nav-tabs">
    <li class="nav active">
        <a href="#tabs-1" data-toggle="tab">Orden de Pago</a>
    </li>
    <li class="nav">
        <a href="#tabs-2" data-toggle="tab">Orden de Pago Detalles</a>
    </li>
</ul>
<div class="row">
    <div class="tab-content">
        <div class="tab-pane fade in active" id="tabs-1">    
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="box box-success">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="fa fa-user"></i> Orden de Pago</h3>
                            </div>
                            <div class="box-body">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th>N° Orden de Pago</th>
                                            <td>{{ ordenPago.numero }}</td>
                                        </tr>
                                        <tr>
                                            <th style="width:30%">Proveedor</th>
                                            <td><a href="{{ path('proveedor_show', { 'id': ordenPago.proveedor.Id }) }}">{{ ordenPago.proveedor.nombre }}</a></td>
                                        </tr>
                                        <tr>
                                            <th>Fecha</th>
                                            <td>{% if ordenPago.fecha %}{{ ordenPago.fecha|date('d-m-Y') }}{% endif %}</td>
                                        </tr>
                                        <tr>
                                            <th>Observaciones</th>
                                            <td>{{ ordenPago.observaciones }}</td>
                                        </tr>
                                        <tr>
                                            <th>Sucursal</th>
                                            <td>{{ ordenPago.sucursal }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="box box-success">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="fa fa-user"></i> Totales</h3>
                            </div>
                            <div class="box-body">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th>Total</th>
                                            <td>{{ ordenPago.total }}</td>
                                        </tr>
                                        <tr>
                                            <th style="width:30%">Disponible</th>
                                            <td>{{ ordenPago.disponible }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="box box-success">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="fa fa-user"></i> Saldo Actual</h3>
                            </div>
                            <div class="box-body">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th style="width:30%">Saldo Actual</th>
                                            <td>{{ ordenPago.proveedor.saldo }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">    
                    <div class="box box-success">
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('ordenpago_index') }}" class="btn btn-app">
                                        <i class="fa fa-arrow-left"></i> Ordenes de Pago
                                    </a>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                    <a href="{{ path('ordenpago_imprimir', { 'id': ordenPago.Id }) }}" class="btn btn-app pull-right pull-right" target="_blank" title="Imprimir Recibo"><span class="glyphicon glyphicon-print"></span>Imprimir</a>
                                </div>
                                {#
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    {%if not comprobante.caeNumero is empty%}
                                        <a href="{{ path('comprobanteventa_factura_imprimir', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right" target="_blank" title="Impresión Factura Electrónica"><span class="glyphicon glyphicon-print"></span>Imprimir FE</a>
                                    {%else%}
                                        <a href="{{ path('comprobanteventa_factura_imprimir', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right" target="_blank" title="Impresión Comprobante Interno"><span class="glyphicon glyphicon-print"></span>Imprimir CI</a>
                                        <a href="{{ path('comprobanteventa_facturar', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-hdd"></span> Facturar</a>
                                    {%endif%}
