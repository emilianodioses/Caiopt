                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('comprobanteventa_edit', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                                     </a>
                                </div>
                                #}
                            </div>
                        </div>
                    </div>            
                </div> 
            </div> 
        </div>

        <div class="tab-pane" id="tabs-2">  
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                        <div class="box box-success">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="fa fa-user"></i> Pagos</h3>
                            </div>
                            <div class="box-body">
                                <table class="table table-condensed table-hover input-sm">
                                    <thead>
                                        <tr>
                                            <th>Tipo de Pago</th>
                                            <th>Banco</th>
                                            <th>Fecha</th>
                                            <th>Número</th>
                                            <th>Importe</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for proveedorPago in proveedorPagos %}
                                        <tr>
                                            <td>{{ proveedorPago.pagoTipo.nombre }}</td>
                                            {% if proveedorPago.banco is empty %}
                                                <td>-</td>
                                            {% else %}
                                                <td>{{ proveedorPago.banco }}</td>
                                            {% endif %}
                                            {% if proveedorPago.fecha is empty %}
                                                <td>-</td>
                                            {% else %}
                                                <td>{{ proveedorPago.fecha | date('d-m-Y') }}</td>
                                            {% endif %}
                                            {% if proveedorPago.numero is empty %}
                                                <td>-</td>
                                            {% else %}
                                                <td>{{ proveedorPago.numero }}</td>
                                            {% endif %}
                                            <td>{{ proveedorPago.importe }}</td>
                                        </tr>
                                    </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                        <div class="box box-success">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="fa fa-user"></i> Comprobantes</h3>
                            </div>
                            <div class="box-body">
                               <table class="table table-condensed table-hover input-sm">
                                    <thead>
                                        <th style="width: 15%">Pto. Venta</th>
                                        <th style="width: 15%">Nº Fac.</th>
                                        <th style="width: 20%">Tipo</th>
                                        <th>Total</th>
                                        <th>Pagado</th>
                                        <th>Pendiente</th>
                                        <th>Acc</th>
                                    </thead>
                                    <tbody>
                                        {% for ordenPagoComprobante in ordenPagoComprobantes %}
                                            {% set comprobante = ordenPagoComprobante.comprobante %}
                                            <tr class="item">
                                                <td>{{ comprobante.puntoVenta }}</td>
                                                <td>{{ comprobante.numero }}</td>
                                                <td>{{ comprobante.tipo.descripcion }}</td>
                                                <td>{{ comprobante.total }}</td>
                                                <td>{{ ordenPagoComprobante.importe }}</td>
                                                <td>{{ comprobante.pendiente }}</td>
                                                <td>
                                                    <a href="{{ path('comprobantecompra_show', { 'id': comprobante.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                                                    <a href="{{ path('ordenpago_proveedor_delete', { 'ordenPagoComprobante': ordenPagoComprobante.Id }) }}" onclick="return confirm('Esta Seguro?')"><span class="glyphicon glyphicon-remove-sign"></span></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">    
                    <div class="box box-success">
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('ordenpago_index') }}" class="btn btn-app">
                                        <i class="fa fa-arrow-left"></i> Ordenes de Pago
                                    </a>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                    <a href="{{ path('ordenpago_imprimir', { 'id': ordenPago.Id }) }}" class="btn btn-app pull-right pull-right" target="_blank" title="Imprimir Recibo"><span class="glyphicon glyphicon-print"></span>Imprimir</a>
                                </div>
                                {#
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    {%if not comprobante.caeNumero is empty%}
                                        <a href="{{ path('comprobanteventa_factura_imprimir', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right" target="_blank" title="Impresión Factura Electrónica"><span class="glyphicon glyphicon-print"></span>Imprimir FE</a>
                                    {%else%}
                                        <a href="{{ path('comprobanteventa_factura_imprimir', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right" target="_blank" title="Impresión Comprobante Interno"><span class="glyphicon glyphicon-print"></span>Imprimir CI</a>
                                        <a href="{{ path('comprobanteventa_facturar', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-hdd"></span> Facturar</a>
                                    {%endif%}
                                    <a type="button" class="btn btn-primary btn-md" href="{{ path('ordenpago_new', { 'comprobante': comprobante.Id }) }}"><i class="fa fa-plus"></i> Nuevo</a>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('comprobanteventa_edit', { 'id': comprobante.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                                     </a>
                                </div>
                                #}
                            </div>
                        </div>
                    </div>            
                </div> 
            </div>
        </div>
    </div>
</div> 
{% endblock %}


