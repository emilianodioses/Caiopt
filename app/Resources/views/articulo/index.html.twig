{% extends 'base.html.twig' %}

{% block header %}
Artículos
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<form class="form-horizontal" action="{{path('articulo_index')}}" method="GET">
  <div class="row"> 
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 500px;">
              <input id="btn-input" type="text" class="form-control input-sm" 
                 name="texto" placeholder="Buscar por Nombre/Documento/Email/Contacto" value="{{texto}}"/>
              <span class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  <a type="button" class="btn btn-primary btn-md" href="{{ path('articulo_new') }}"><i class="fa fa-plus"></i> Nuevo</a>
              </span>
            </div>  
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
              <tr>
                <th>Codigo</th>
                <th>Marca</th>
                <th style="width: 25%">Descripcion</th>
                <th>Precio Costo</th>
                <th>Ganancia %</th>
                <th>Precio Venta</th>
                <th>IVA</th>
                <th>Precio Modificable</th>
                <th>Necesita Orden de Trabajo</th>
                <th>Acciones</th>
              </tr>
            <tbody>
            {% for articulo in pagination %}
                <tr>
                    <td>{{ articulo.codigo }}</td>
                    <td>{{ articulo.marca }}</td>
                    <td>{{ articulo.descripcion }}</td>
                    <td>{{ articulo.precioCosto }}</td>
                    <td>{{ articulo.gananciaPorcentaje }}</td>
                    <td>{{ articulo.precioVenta }}</td>
                    <td>{{ articulo.iva }}</td>
                    <td>{% if articulo.precioModifica %}
                          <span class="label label-success">Si</span>
                            {% else %}
                          <span class="label label-danger">No</span>
                        {% endif %}
                    </td>                          
                    <td>{% if articulo.ordenTrabajo %}
                          <span class="label label-success">Si</span>
                            {% else %}
                          <span class="label label-danger">No</span>
                        {% endif %}
                    </td>                          
                    <td>
                      <a href="{{ path('articulo_show', { 'id': articulo.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>
                      </a>
                      <a href="{{ path('articulo_edit', { 'id': articulo.Id }) }}"><span class="glyphicon glyphicon-edit"></span>
                      </a>
                      <a href="{{ path('articulo_delete', { 'id': articulo.Id }) }}" onclick="return confirm('¿Está Seguro?')"><span class="glyphicon glyphicon-remove-sign"></span>
                      </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}

{% block paginador %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}