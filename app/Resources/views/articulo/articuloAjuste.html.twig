{% extends 'base.html.twig' %}

{% block header %}
Ajuste Artículos
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

    <form class="form-horizontal" action="{{path('articulo_ajuste')}}" method="GET">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <div class="box-tools">
                            <div class="row">

                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <label class="control-label required" for="fecha">Marca</label>
                                    <select id="marca" name="marca" class="form-control">
                                        <option value=0>Todas</option>
                                        {% for marca in marcas %}
                                            <option value="{{marca.id}}" {{ ( marca.id == marcaSel) ? 'selected' : '' }}>
                                            {{marca.descripcion}}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <label class="control-label required" for="fecha">Categoría</label>
                                    <select id="categoria" name="categoria" class="form-control">
                                        <option value=0>Todas</option>
                                        {% for categoria in categorias %}
                                            <option value="{{categoria.id}}" {{ ( categoria.id == categoriaSel) ? 'selected' : '' }}>
                                                {{categoria.descripcion}}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <div class="input-group input-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <div style="margin-top: 27px;">
                                            <span class="input-group-btn"> 
                                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <div class="input-group input-group-sm">
                                        <label class="control-label required" for="fecha">Porcentaje</label>
                                        <input name="ajuste" type="text" class="form-control input-sm" autocomplete="off">
                                    </div>
                                </div>

                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                                    <div class="input-group input-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <span class="input-group-btn">
                                                <div style="margin-top: 24px;">
                                                    <button type="submit" name="ajustec" class="btn btn-default"><i></i>Aplicar Ajuste</button>
                                                </div>
                                            </span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <br/>
                    <br/>

                    <div class="box-body table-responsive no-padding">
                        <table id="articulo_articuloAjuste" class="table table-hover">
                            <tr>
                                <th style="width: 7%">Código</th>
                                <th>Marca</th>
                                <th>Categoría</th>
                                <th>Descripción</th>
                                <th>Precio Venta</th>
                            </tr>
                            <tbody>

                            {% for articulo in articulos %}
                                <tr>
                                    <td>{{ articulo.codigo }}</td>
                                    <td>{{ articulo.descMarca }}</td>
                                    <td>{{ articulo.descCat }}</td>
                                    <td>{{ articulo.descripcion }}</td>
                                    <td>{{ articulo.precioVenta }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <br>
                    <div class="box-body table-responsive no-padding">
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </form>

{% endblock %}


