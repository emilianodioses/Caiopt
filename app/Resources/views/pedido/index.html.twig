{% extends 'base.html.twig' %}

{% block header %}
Pedidos de Compras
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<form class="form-horizontal" action="{{path('pedido_index')}}" method="GET">
  <div class="row"> 
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 500px;">
              <input id="btn-input" type="text" class="form-control input-sm" 
                 name="texto" placeholder="Buscar por Nombre/Documento/Email/Contacto" value="{{texto}}"/>

              <span class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  <a type="button" class="btn btn-primary btn-md" href="{{ path('pedido_new') }}"><i class="fa fa-plus"></i> Nuevo</a>
              </span>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
                <tr>
                    <th style="width: 10%">Nº Pedido</th>
                    <th>Proveedor</th>
                    <th>Fecha</th>
                    <th>Observaciones</th>
                    <th style="width: 8%">Acciones</th>
                </tr>
            <tbody>
            {% for pedido in pagination %}
                <tr>
                    <td>{{ pedido.numero }}</td>
                    <td>{{ pedido.proveedor }}</td>
                    <td>{{ pedido.fecha|date('d-m-Y') }}</td>
                    <td>{{ pedido.observaciones }}</td> 
                    <td>
                      <a href="{{ path('pedido_show', { 'id': pedido.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>
                      </a>
                      <a href="{{ path('pedido_edit', { 'id': pedido.Id }) }}"><span class="glyphicon glyphicon-edit"></span>
                      </a>
                      {% if pedido.activo %}
                          <a href="{{ path('pedido_delete', { 'id': pedido.Id }) }}" onclick="return confirm('¿Está Seguro?')"><span class="glyphicon glyphicon-remove-sign"></span>
                          </a>
                      {% else %}
                          <a href="{{ path('pedido_delete', { 'id': pedido.Id }) }}"><span class="glyphicon glyphicon-ok-circle"></span>
                          </a>
                      {% endif %}
                      {#}
                      <a href="{{ path('ordenpago_new', { 'pedido': pedido.Id }) }}"><span class="glyphicon glyphicon-usd"></span>
                        #}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}

{% block paginador %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}