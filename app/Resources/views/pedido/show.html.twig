                                            <td>{{ ordenPago.total }}</td>
                                            <td>{{ ordenPago.disponible }}</td>
                                            <td>{{ ordenPago.observaciones }}</td> 
                                            <td>{{ ordenPagoPedido.importe }}
                                            <td>
                                              <a href="{{ path('ordenpago_show', { 'id': ordenPago.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>
                                              </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                              </table>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="row">    
                    <div class="box box-success">
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('pedidoventa_index') }}" class="btn btn-app">
                                        <i class="fa fa-arrow-left"></i> Pedidos
                                    </a>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('ordenpago_new', { 'pedido': pedido.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-usd"></span> Nueva Orden de Pago
                                     </a>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <a href="{{ path('pedidoventa_edit', { 'id': pedido.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                                     </a>
                                </div>
                            </div>
                        </div>
                    </div>            
                </div>
            </div>
        </div>
        #}
    </div>
</div> 
{% endblock %}


