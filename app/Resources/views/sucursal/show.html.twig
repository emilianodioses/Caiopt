{% extends 'base.html.twig' %}

{% block header %}
Sucursal
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-user"></i> Datos de Sucursal</h3>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th style="width:10%">Nombre</th>
                                <td>{{ sucursal.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Localidad</th>
                                <td>{{ sucursal.localidad }}</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>{{ sucursal.telefono }}</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>{{ sucursal.direccion }}</td>
                            </tr>
                            <tr>
                                <th>Técnico Óptico</th>
                                <td>{{ sucursal.tecnicoOptico }}</td>
                            </tr>
                            <tr>
                                <th>Técnico Óptico Matrícula</th>
                                <td>{{ sucursal.tecnicoOpticoMatricula }}</td>
                            </tr>
                            <tr>
                                <th>Técnico Contactólogo</th>
                                <td>{{ sucursal.tecnicoContactologo }}</td>
                            </tr>
                            <tr>
                                <th>Técnico Contactólogo Matrícula</th>
                                <td>{{ sucursal.tecnicoContactologoMatricula }}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                <td>{% if sucursal.activo %}
                                  <span class="label label-success">Activo</span>
                                {% else %}
                                  <span class="label label-danger">Inactivo</span>
                                {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="box box-success">
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('sucursal_index') }}" class="btn btn-app">
                                <i class="fa fa-arrow-left"></i> Volver
                            </a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('sucursal_edit', { 'id': sucursal.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                             </a>
                        </div>
                    </div>
                </div>
            </div>            
        </div> 
    </div> 
</div>
{% endblock %}
