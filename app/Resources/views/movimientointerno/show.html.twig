{% extends 'base.html.twig' %}

{% block header %}
Movimiento Interno
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-user"></i> Datos de Movimiento Interno</h3>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th style="width:10%">Sucursal Origen</th>
                                <td>{{ movimiento.sucursalOrigen }}</td>
                            </tr>
                            <tr>
                                <th>Sucursal Destino</th>
                                <td>{{ movimiento.sucursalDestino }}</td>
                            </tr>
                            <tr>
                                <th>Categor√≠a</th>
                                <td>{{ movimiento.movimientoCategoria }}</td>
                            </tr>
                            <tr>
                                <th>Fecha</th>
                                <td>{{ movimiento.fecha | date('d-m-Y') }}</td>
                            </tr>
                            <tr>
                                <th>Monto</th>
                                <td>{{ movimiento.monto }}</td>
                            </tr>
                            <tr>
                                <th>Pago Tipo</th>
                                <td>{{ movimiento.pagoTipo }}</td>
                            </tr>
                            <tr>
                                <th>Comprobante</th>
                                <td>{{ movimiento.comprobante }}</td>
                            </tr>
                            <tr>
                                <th>Observaciones</th>
                                <td>{{ movimiento.observaciones }}</td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                <td>{% if movimiento.activo %}
                                  <span class="label label-success">Activo</span>
                                {% else %}
                                  <span class="label label-danger">Inactivo</span>
                                {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="box box-success">
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('movimientointerno_index') }}" class="btn btn-app">
                                <i class="fa fa-arrow-left"></i> Volver
                            </a>
                        </div>
                    </div>
                </div>
            </div>            
        </div> 
    </div> 
</div>
{% endblock %}
