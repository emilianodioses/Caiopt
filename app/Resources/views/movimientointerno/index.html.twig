{% extends 'base.html.twig' %}

{% block header %}
Movimiento Internos
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<form class="form-horizontal" action="{{path('movimientointerno_index')}}" method="GET">
  <div class="row"> 
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 500px;">
              <input id="btn-input" type="text" class="form-control input-sm" 
                 name="texto" placeholder="Buscar por Sucursal/Categoria/Comprobante" value="{{texto}}"/>
              <span class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  <a type="button" class="btn btn-primary btn-md" href="{{ path('movimientointerno_new') }}"><i class="fa fa-plus"></i> Nuevo</a>
              </span>
            </div>  
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
              <tr>
                <th>N°</th>
                <th>Fecha</th>
                <th>Sucursal Origen</th>
                <th>Sucursal Destino</th>
                <th>Importe</th>
                <th>Categoria Movimiento</th>
                <th>Pago Tipo</th>
                <th>Comprobante</th>
                <th>Acciones</th>
              </tr>
            <tbody>
            {% for movimiento in pagination %}
                <tr>
                    <td>{{ movimiento.id }}</td>
                    <td>{{ movimiento.fecha | date('d-m-Y') }}</td>
                    <td>{{ movimiento.sucursalOrigen }}</td>
                    <td>{{ movimiento.sucursalDestino }}</td>
                    <td>{{ movimiento.monto }}</td>
                    <td>{{ movimiento.movimientoCategoria }}</td>
                    <td>{{ movimiento.pagoTipo }}</td>
                    <td>{{ movimiento.comprobante }}</td>
                    <td>
                      <a href="{{ path('movimientointerno_show', { 'id': movimiento.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>
                      </a>
                      <a href="{{ path('movimientointerno_delete', { 'id': movimiento.Id }) }}" onclick="return confirm('¿Esta Seguro?')"><span class="glyphicon glyphicon-remove-sign"></span>
                      </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}

{% block paginador %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}