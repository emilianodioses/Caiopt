{% block body %}
    <body style="font-family:Verdana, 'Bitstream Vera Sans', 'DejaVu Sans', Tahoma, Geneva, Arial, Sans-serif;font-size:8pt">
    <!-- Contenido de tu cuerpo Twig aquí -->
    {% set contador = 0 %}
    {% for OT in ordenes_trabajo %}
        {% if contador > 0 and contador % 3 == 0 %}
            <!-- Salto de página -->
            <div style="page-break-after: always;"></div>
        {% endif %}
        <div class="box-body table-responsive no-padding">
            <table id="informe_ot_{{ loop.index }}" class="table table-hover" style="width: 100%; border: 1px solid black; padding-top: 5px">
                <thead>
                <tr>
                    <td colspan="1">
                        <br>
                        <img width="35" height="35" src="{{ asset('img/logooptica.jpg')}}">
                    </td>
                    <td colspan="1">
                    <b>OPTICA</b>
                        {% if sucursal %}
                            <br>
                            {{ sucursal.direccion }} - {{ sucursal.localidad.nombre }}
                            {{ sucursal.localidad.provincia.nombre }}
                            <br>
                            <b>Teléfono:</b> {{ sucursal.telefono }}
                        {% endif %}
                    </td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <!-- Información de la Orden de Trabajo -->
                    <td>
                        <table>
                            <tr>
                                <td><b>RP. N°:</b> {{ OT.id }} <br></td>
                            </tr>
                            <tr>
                                <td><b>Cliente:</b> {{ OT.nombreCliente }} <br> </td>
                            </tr>
                            <tr>
                                <td><b>Domicilio:</b> {{ OT.direccion }} <br></td>
                            </tr>
                            <tr>
                                <td><b>Fecha Receta:</b> {{ OT.fechaReceta|date('d-m-Y') }} <br></td>
                            </tr>
                            <tr>
                                <td><b>Fecha Recepción:</b>
                                    {% if OT.fechaRecepcion is empty %}

                                    {% else %}
                                        {{ OT.fechaRecepcion | date('d-m-Y') }}
                                    {% endif %}
                                    <b> Fecha Entrega:</b>
                                    {% if OT.fechaEntrega is empty %}

                                    {% else %}
                                        {{ OT.fechaEntrega | date('d-m-Y') }}
                                    {% endif %}
                                    <br>
                                </td>
                            </tr>
                            <tr>
                                <td><b>Médico:</b> {{ OT.medicoNombre }} - {{ OT.medicoMatricula }} <br> </td>
                            </tr>
                            <tr>
                                {% if OT.id in arreglo_cristales|keys %}
                                    <td colspan="2" style="width: 100%;"><b>Cristales:</b> {{ arreglo_cristales[OT.id] }}
                                        <br>
                                    </td>
                                {% else %}
                                    <td colspan="2" style="width: 100%;"><b>Cristales: - </b><br></td>
                                {% endif %}
                            </tr>
                            <tr>
                                <td colspan="2" style="width: 100%;"><b>Armazón:</b> {{ OT.descripcionMarcos|raw }} <br></td>
                            </tr>
                            <tr>
                                <td colspan="2" style="width: 100%;"><b>Op. Téc.:</b> {{ sucursal.tecnicoOptico }} - {{ sucursal.tecnicoOpticoMatricula }} </td>
                            </tr>
                        </table>
                    </td>
                    <!-- Graduaciones -->
                    <td>
                        <table id="graduaciones_ot_{{ loop.index }}" width="101%" cellspacing="0" border="1" style="margin-top: 10px;">
                            <tbody>
                            <tr>
                                <td colspan="4" align="center"><b>Graduaciones</b></td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding-bottom: 20px;"><b>Lejos</b></td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid black;">
                                    <b>O.D :</b> ESF: {{ OT.lejosOjoDerechoEsfera }}, CIL: {{ OT.lejosOjoDerechoCilindro }}, EJE: {{ OT.lejosOjoDerechoEje }}
                                    <br>
                                    <b>O.I :</b> ESF: {{ OT.lejosOjoIzquierdoEsfera }}, CIL: {{ OT.lejosOjoIzquierdoCilindro }}, EJE: {{ OT.lejosOjoIzquierdoEje }}
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding-bottom: 20px;"><b>Cerca</b></td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid black;">
                                    <b>O.D :</b> ESF: {{ OT.cercaOjoDerechoEsfera }}, CIL: {{ OT.cercaOjoDerechoCilindro }}, EJE: {{ OT.cercaOjoDerechoEje }}
                                    <br>
                                    <b>O.I :</b> ESF: {{ OT.cercaOjoIzquierdoEsfera }}, CIL: {{ OT.cercaOjoIzquierdoCilindro }}, EJE: {{ OT.cercaOjoIzquierdoEje }}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>

        </div>
        {% set contador = contador + 1 %}
    {% endfor %}
    <!-- /.box-body -->
    </body>
{% endblock %}
