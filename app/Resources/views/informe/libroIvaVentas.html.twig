{% extends 'base.html.twig' %}

{% block header %}
Informe Libro Iva Ventas
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<form class="form-horizontal" action="{{path('informe_libroIvaVentas')}}" method="GET">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
            <div class="row">
              <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="input-group input-group-sm">
                  <div class="input-group input-group-sm">
                    <span class="input-group-addon input-sm">F. Desde</span>
                    <input name="fecha_desde" type="text" class="form-control input-sm js-datepicker" autocomplete="off" placeholder="Desde" value="{{fecha_desde}}">
                  </div>
                </div>
              </div>

              <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="input-group input-group-sm">
                  <div class="input-group input-group-sm">
                    <span class="input-group-addon input-sm">F. Hasta</span>
                    <input name="fecha_hasta" type="text" class="form-control input-sm js-datepicker" autocomplete="off" placeholder="Hasta" value="{{fecha_hasta}}">
                  </div>
                </div>
              </div>

              <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="input-group input-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12">
{#                  <div class="input-group input-group-sm">#}
{#                    <span class="input-group-addon input-sm">Médico</span>#}
{#                    <input name="medico" type="text" class="form-control input-sm" placeholder="Nombre/Matrpicula" value="{{medico}}">#}
{#                  </div>#}

                  <span class="input-group-btn">
                      <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->

        <div class="box-body table-responsive no-padding">
          <table id="informe_libroIvaVentas" class="table table-hover">
                <tr>
                    <th style="width: 7%">Fecha</th>
                    <th>Cpte.</th>
                    <th>Nº Comp.</th>
                    <th>Cliente</th>
                    <th>CUIT o Doc.</th>
                    <th>Neto</th>
                    <th>Conc. No Grav.
                        Ret./Perc./P.Cta
                    </th>
                    <th>Déb. Fiscal
                        IVA Discrim.
                    </th>
                    <th>Acrecen.
                        Op. Exentas
                    </th>
                    <th>Total Operac.
                    </th>
                </tr>
            <tbody>
{#            {% for reciboComprobante in recibosComprobantes %}#}
{#              {% set comprobante = reciboComprobante.comprobante %}#}

            {% for comprobante in informeIvaVentas %}
{#                {% set comprobante = reciboComprobante.comprobante %}#}

                <tr>                    
                    <td>{{ comprobante.fecha|date('d-m-Y') }}</td>
                    <td>{{ comprobante.descripcion }}</td>
                    <td>{{ comprobante.nro_comprobante }}</td>
                    <td>{{ comprobante.clienteRazonSocial }}</td>
                    <td>{{ comprobante.documentoNumero }}</td>
                    <td>{{ comprobante.totalNeto }}</td>
                    <td>{{ comprobante.totalNoGravado }}</td>
                    <td>{{ comprobante.importeIva }}</td>
                    <td>{{ comprobante.importeIvaExento }}</td>
                    <td>{{ comprobante.total }}</td>
{#                    <td>#}
{#                      <a href="{{ path('comprobanteventa_show', { 'id': comprobante.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>#}
{#                      </a>#}
{#                    </td>#}
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
        <br>
        <div class="box-body table-responsive no-padding">

          <a href="{{ path('informe_libroIvaVentas_imprimir', {'fecha_desde': fecha_desde, 'fecha_hasta': fecha_hasta}) }}" class="btn btn-app pull-right" target="_blank" title="Impresión de Informe"><span class="glyphicon glyphicon-print"></span>Imprimir PDF</a>
          <a href="{{ path('informe_libroIvaVentas_imprimirexcel', {'fecha_desde': fecha_desde, 'fecha_hasta': fecha_hasta}) }}" class="btn btn-app pull-right" target="_blank" title="Impresión de Informe"><span class="glyphicon glyphicon-duplicate"></span>Imprimir Excel</a>
        </div>
        <br>
      </div>
    </div>
  </div>
</form>
{% endblock %}
