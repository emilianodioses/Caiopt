{% extends 'base.html.twig' %}

{% block header %}
Punto de Venta
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-user"></i> Datos de Punto de Venta</h3>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th style="width:10%">Número</th>
                                <td>{{ puntoVenta.numero }}</td>
                            </tr>
                            <tr>
                                <th>Sucursal</th>
                                <td>{{ puntoVenta.sucursal }}</td>
                            </tr>
                            <tr>
                                <th>Factura Electrónica</th>
                                <td>{% if puntoVenta.feHabilitada %}
                                  <span class="label label-success">Habilitada</span>
                                {% else %}
                                  <span class="label label-danger">Deshabilitada</span>
                                {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Activo</th>
                                <td>{% if puntoVenta.activo %}
                                  <span class="label label-success">Activo</span>
                                {% else %}
                                  <span class="label label-danger">Inactivo</span>
                                {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="box box-success">
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('puntoventa_index') }}" class="btn btn-app">
                                <i class="fa fa-arrow-left"></i> Volver
                            </a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('puntoventa_edit', { 'id': puntoVenta.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                             </a>
                        </div>
                    </div>
                </div>
            </div>            
        </div> 
    </div> 
</div>
{% endblock %}
