            <td style="text-align: center" width="11%">Forma de pago</td>
                <td style="text-align: center" width="10%">Bonificación</td>
            {% endif %}
            <td style="text-align: center" width="10%">Total</td>
        </tr>
        {% for ordenTrabajoContactologiaDetalle in ordentrabajocontactologiadetalles %}
            <tr>
                <td style="text-align: center">{{ ordenTrabajoContactologiaDetalle.articulo.descripcion }}</td>
                <td style="text-align: center">{{ ordenTrabajoContactologiaDetalle.precioVenta }}</td>
                {% if pagina_nro == 1 %}

                    <td style="text-align: center">
                        {% if ordenTrabajoContactologiaDetalle.parametro is not null %}
                            {{ ordenTrabajoContactologiaDetalle.parametro.descripcion }}
                        {% else %}
                            -
                        {% endif %}
                    </td>

                    <td style="text-align: center">{{ ordenTrabajoContactologiaDetalle.importeBonificacion }}</td>
                {% endif %}
                <td style="text-align: center">{{ ordenTrabajoContactologiaDetalle.total }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if pagina_nro == 1 %}
