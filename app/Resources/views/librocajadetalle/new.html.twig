{% extends 'base.html.twig' %}

{% block header %}
Movimiento de Caja
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {{ form_start(form) }}
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-user"></i> Datos Generales</h3>
                </div>
                <div class="box-body">
                    {{ form_errors(form) }}
                    <div class="row">
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            <label class="control-label required" for="fecha">Fecha</label>
                            <input type="text" id="fecha" name="fecha" required="required" style="text-transform: uppercase" class="form-control" value="{{ libroCajaDetalle.libroCaja.fecha | date('d-m-Y')}}" readonly="">
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            {{ form_row(form.tipo) }}                            
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            {{ form_row(form.pagoTipo) }}
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            {{ form_row(form.importe) }}
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            {{ form_row(form.movimientoCategoria) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            {{ form_row(form.descripcion) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="box box-success">
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <a href="{{ path('librocaja_show', { 'id': libroCajaDetalle.libroCaja.Id }) }}" class="btn btn-app">
                                <i class="fa fa-arrow-left"></i> Libro Caja
                            </a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <button type="submit" class="btn btn-app pull-right"><i class="fa fa-floppy-o"></i> Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

