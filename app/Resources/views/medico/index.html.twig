{% extends 'base.html.twig' %}

{% block header %}
Médicos
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<form class="form-horizontal" action="{{path('medico_index')}}" method="GET">
  <div class="row"> 
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 500px;">
              <input id="btn-input" type="text" class="form-control input-sm" 
                 name="texto" placeholder="Buscar por Nombre/Documento/Email/Contacto" value="{{texto}}"/>

              <span class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  <a type="button" class="btn btn-primary btn-md" href="{{ path('medico_new') }}"><i class="fa fa-plus"></i> Nuevo</a>
              </span>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
              <tr>
                  <th>Nombre</th>
                  <th>Matricula</th>
                  <th>Tipo Documento</th>
                  <th>Número Documento</th>
                  <th>Localidad</th>
                  <th>Dirección</th>
                  <th>Teléfono</th>
                  <th>Email</th>
                  <th>Contacto</th>
                  <th>Porcentaje</th>
                  <th>Estado</th>
                  <th>Acciones</th>
              </tr>
            <tbody>
            {% for medico in pagination %}
                <tr>
                  <td>{{ medico.nombre }}</td>
                  <td>{{ medico.matricula }}</td>
                  <td>{{ medico.documentoTipo }}</td>
                  <td>{{ medico.documentoNumero }}</td>
                  <td>{{ medico.localidad }}</td>
                  <td>{{ medico.direccion }}</td>
                  <td>{{ medico.telefono }}</td>
                  <td>{{ medico.email }}</td>
                  <td>{{ medico.contacto }}</td> 
                  <td>{{ medico.porcentaje }}</td>
                  <td>{% if medico.activo %}
                      <span class="label label-success">Activo</span>
                  {% else %}
                      <span class="label label-danger">Inactivo</span>
                  {% endif %}
                  </td>   
                  <td>
                      <a href="{{ path('medico_show', { 'id': medico.Id }) }}"><span class="glyphicon glyphicon-eye-open"></span>
                      </a>
                      <a href="{{ path('medico_edit', { 'id': medico.Id }) }}"><span class="glyphicon glyphicon-edit"></span>
                      </a>
                      {% if medico.activo %}
                          <a href="{{ path('medico_delete', { 'id': medico.Id }) }}"><span class="glyphicon glyphicon-remove-sign"></span>
                          </a>
                      {% else %}
                          <a href="{{ path('medico_delete', { 'id': medico.Id }) }}"><span class="glyphicon glyphicon-ok-circle"></span>
                          </a>
                      {% endif %}
                      </a>
                  </td>
                </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</form>
{% endblock %}

{% block paginador %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}