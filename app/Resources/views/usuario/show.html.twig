{% extends 'base.html.twig' %}

{% block header %}
Usuario
{% endblock %}

{% block header_description %}
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-user"></i> Datos Usuario</h3>
            </div>
            <div class="box-body">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th style="width:10%">Nombre</th>
                            <td>{{ usuario.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Apellido</th>
                            <td>{{ usuario.apellido }}</td>
                        </tr>
                        <tr>
                            <th>Usuario</th>
                            <td>{{ usuario.usuario }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ usuario.email }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{% if usuario.activo %}
                              <span class="label label-success">Activo</span>
                            {% else %}
                              <span class="label label-danger">Inactivo</span>
                            {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Rol</th>
                            <td>{{ usuario.rol }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="box box-success">
            <div class="box-footer">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a href="{{ path('usuario_index') }}" class="btn btn-app">
                            <i class="fa fa-arrow-left"></i> Usuarios
                        </a>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <a href="{{ path('usuario_edit', { 'id': usuario.Id }) }}" class="btn btn-app pull-right"><span class="glyphicon glyphicon-edit"></span> Editar
                         </a>
                    </div>
                </div>
            </div>
        </div>            
    </div> 
</div> 
{% endblock %}
